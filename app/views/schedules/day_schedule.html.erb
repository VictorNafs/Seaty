<h1>Planning pour le <%= @date.strftime("%d %B %Y") %></h1>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Heure</th>
      <th>Événements ou activités</th>
    </tr>
  </thead>
  <tbody>
    <% (0..23).each do |hour| %>
      <tr>
        <td><%= hour %>h - <%= hour + 1 %>h</td>
        <td class="<%= @reservations_by_hour[hour]&.any? ? 'bg-danger' : 'bg-success' %>">
          <%= @reservations_by_hour[hour]&.any? ? 'Réservé' : 'Disponible' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
